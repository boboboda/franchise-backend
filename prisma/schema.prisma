generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Franchise {
  basicInfo       Json     @map("basic_info")
  brandName       String?  @map("brand_name")
  businessStatus  Json     @map("business_status")
  businessTerms   Json     @map("business_terms")
  companyId       Int      @unique @map("company_id")
  companyName     String?  @map("company_name")
  crawledAt       DateTime @default(now()) @map("crawled_at")
  franchiseeCosts Json     @map("franchisee_costs")
  legalCompliance Json     @map("legal_compliance")
  url             String
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([companyId])
  @@index([companyName])
  @@index([brandName])
  @@map("franchises")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  name            String
  phone           String
  role            String   @default("USER")
  userType        UserType @default(ENTREPRENEUR)
  fcmToken        String?
  termsAgreed     Boolean  @default(false)
  marketingAgreed Boolean  @default(false)
  autoLoginState  Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

enum UserType {
  ENTREPRENEUR
  CONSULTANT
}
